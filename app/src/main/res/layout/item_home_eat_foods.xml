<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/custom_design_edittext"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/item_eat_list_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="Elma "

                android:textColor="#086972"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_eat_list_food_kcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="1dp"
                android:text="58,2"
                android:textColor="@color/spinner_orange"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_eat_list_food_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="1dp"
            android:src="@drawable/ic_vegetable_512" />
    </LinearLayout>

</RelativeLayout>