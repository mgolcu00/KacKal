<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:id="@+id/alert_first_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/alert_second_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/horizontal_line_bottom"
                android:padding="12dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/alert_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center"
                    android:text="Elma"
                    android:textColor="@color/home_headers"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/alert_food_kcal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="52.1 kcal"
                    android:textColor="@color/DCN_primary"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alert_first_linear_layout"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/custom_design_edittext"
                android:padding="12dp"
                android:weightSum="4"

                >

                <EditText
                    android:id="@+id/alert_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/custom_design_edittext"
                    android:gravity="center"
                    android:padding="8dp"
                    android:inputType="numberDecimal"
                    android:text="100" />

                <Spinner
                    android:id="@+id/alert_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alert_first_linear_layout"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/custom_design_edittext"

                android:weightSum="2"

                >

                <Button
                    android:id="@+id/alert_button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="18dp"
                    android:layout_weight="1"
                    android:background="@color/BMI_bad_red"
                    android:text="VazgeÃ§"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/alert_button_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="18dp"
                    android:layout_weight="1"
                    android:background="@color/BMI_good_green"
                    android:text="Ekle +"
                    android:textColor="@android:color/white" />


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>

